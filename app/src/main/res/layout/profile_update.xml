<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_screen_inner">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/app_logo_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/logo_main" />


            <RelativeLayout
                android:id="@+id/app_register_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/app_logo_image"
                android:background="#33FFFFFF"
                android:layout_margin="10dp"
                android:padding="20dp">


                <EditText
                    android:id="@+id/register_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="5dp"
                    android:background="#ffffff"
                    android:hint="New Password"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/color_black"
                    android:textColorHint="@color/color_grey" />

                <EditText
                    android:id="@+id/register_fname"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/register_pwd"
                    android:layout_margin="5dp"
                    android:background="#ffffff"
                    android:hint="Full Name"
                    android:padding="10dp"
                    android:textColor="@color/color_black"
                    android:textColorHint="@color/color_grey" />

                <EditText
                    android:id="@+id/register_phone"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/register_fname"
                    android:layout_margin="5dp"
                    android:background="#ffffff"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:textColor="@color/color_black"
                    android:textColorHint="@color/color_grey" />

                <EditText
                    android:id="@+id/register_carno"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/register_phone"
                    android:layout_margin="5dp"
                    android:background="#ffffff"
                    android:hint="Car Number"
                    android:padding="10dp"
                    android:textColor="@color/color_black"
                    android:textColorHint="@color/color_grey" />

                <EditText
                    android:id="@+id/register_mobileno"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/register_carno"
                    android:layout_margin="5dp"
                    android:background="#ffffff"
                    android:hint="Mobile Number"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:textColor="@color/color_black"
                    android:textColorHint="@color/color_grey" />

                <EditText
                    android:id="@+id/register_cartype"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/register_mobileno"
                    android:layout_margin="5dp"
                    android:background="#ffffff"
                    android:hint="Car Type"
                    android:padding="10dp"
                    android:textColor="@color/color_black"
                    android:textColorHint="@color/color_grey" />

                <EditText
                    android:id="@+id/register_email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/register_cartype"
                    android:layout_margin="5dp"
                    android:background="#ffffff"
                    android:drawablePadding="5dp"
                    android:hint="Email Id"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textColor="@color/color_black"
                    android:textColorHint="@color/color_grey" />


                <Button
                    android:id="@+id/app_register_btn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/register_email"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ask_btn_selector"
                    android:padding="10dp"
                    android:text="Update" />
            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>
</RelativeLayout>