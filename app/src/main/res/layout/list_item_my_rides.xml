<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_my_rides_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ly_root"
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        app:cardCornerRadius="4dp"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/my_rides_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:src="@drawable/uer_img" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/my_rides_image"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/my_rides_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="RameshBabu"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/my_rides_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="8885479045"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/my_rides_journey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Journey On: 12-07-2015 10PM"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <TextView
                android:id="@+id/my_rides_posted_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_rides_image"
                android:layout_margin="5dp"
                android:text="Posted On 12/07/2015"
                android:textColor="@android:color/black" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>