<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.taxi.driver.taxiappdriver">

    <application
        android:name=".application.AppConfig"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyMaterialTheme">

        <activity
            android:name=".activity.NewRidesActivity"
            android:label="@string/title_activity_new_rides"></activity>
        <activity
            android:name=".activity.MyRideActivity"
            android:label="@string/title_activity_my_ride"></activity>
        <activity
            android:name=".activity.StartActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name=".activity.AbstractTaxiDriverActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name=".activity.SplashActivity"
            android:label="@string/title_myrides"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/MyMaterialTheme"></activity>
    </application>

</manifest>
